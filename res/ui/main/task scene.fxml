<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox>
         <children>
            <HBox fx:id="_itemHBox" alignment="CENTER" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <HBox>
                     <children>
                        <ToggleButton fx:id="_unstartedButton" mnemonicParsing="false" text="未完成">
                           <toggleGroup>
                              <ToggleGroup fx:id="_statusGroup" />
                           </toggleGroup>
                        </ToggleButton>
                        <ToggleButton fx:id="_workingButton" mnemonicParsing="false" text="进行中" toggleGroup="$_statusGroup" />
                        <ToggleButton fx:id="_completedButton" mnemonicParsing="false" text="已完成" toggleGroup="$_statusGroup" />
                     </children>
                  </HBox>
                  <AnchorPane>
                     <children>
                        <HBox alignment="CENTER_LEFT" onMouseClicked="#onTitleLabelClicked" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <Label fx:id="_titleLabel" text="Label">
                                 <contextMenu>
                                    <ContextMenu>
                                      <items>
                                        <MenuItem mnemonicParsing="false" onAction="#onTitleEditingAction" text="重命名" />
                                          <MenuItem mnemonicParsing="false" onAction="#onTaskDeletingAction" text="删除" />
                                      </items>
                                    </ContextMenu>
                                 </contextMenu></Label>
                           </children>
                        </HBox>
                        <TextField fx:id="_titleEditingField" onAction="#onTitleEditedAction" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</fx:root>
