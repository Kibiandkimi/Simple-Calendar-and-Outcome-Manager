<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.MainSceneController">
   <children>
      <HBox nodeOrientation="RIGHT_TO_LEFT" prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <AnchorPane nodeOrientation="LEFT_TO_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <AnchorPane fx:id="_planningPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <ListView prefWidth="150.0" />
                              <ListView HBox.hgrow="ALWAYS" />
                           </children></HBox>
                        <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" text="+" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0" />
                     </children></AnchorPane>
                  <AnchorPane fx:id="_calendarPane" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <ListView prefWidth="150.0" />
                           </children></HBox>
                     </children></AnchorPane>
                  <AnchorPane fx:id="_settingPane" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
            <VBox>
               <children>
                  <VBox VBox.vgrow="ALWAYS">
                     <children>
                        <ToggleButton mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" selected="true" text="计划" userData="$_planningPane">
                           <toggleGroup>
                              <ToggleGroup fx:id="_tabButtonGroup" />
                           </toggleGroup>
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin></ToggleButton>
                        <ToggleButton mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" text="日历" toggleGroup="$_tabButtonGroup" userData="$_calendarPane">
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin></ToggleButton>
                     </children>
                  </VBox>
                  <ToggleButton mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" text="设置" toggleGroup="$_tabButtonGroup" userData="$_settingPane">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin></ToggleButton>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
